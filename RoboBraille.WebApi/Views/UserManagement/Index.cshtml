@model RoboBraille.WebApi.Models.UserManagement.ServiceUserSummary
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create New User</h2>
<p>@Html.DisplayFor(p => p.StatusMessage)</p>
@using (Html.BeginForm("Create", "UserManagement", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(p => Model.UserName, "User name", new { @class = "col-sm-4 control-label" })
            <div class="col-xs-4">
                @Html.TextBoxFor(p => p.UserName, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(p => p.UserName)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => Model.EmailAddress, "User email", new { @class = "col-sm-4 control-label" })
            <div class="col-xs-4">
                @Html.TextBoxFor(p => p.EmailAddress, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(p => p.EmailAddress)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => Model.IsLifeTimeLicense, "Is license for lifetime use", new { @class = "col-sm-4 control-label" })
            <div class="col-xs-4 checkbox">
                @Html.CheckBoxFor(p => p.IsLifeTimeLicense, new { @class = "" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => Model.ExpirationDate, "Expiration date (dd/MM/yyyy)", new { @class = "col-sm-4 control-label" })
            <div class="col-xs-4">
                @Html.EditorFor(p => p.ExpirationDate, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(p => p.ExpirationDate)
        </div>
        <div class="form-group">
            @Html.Label("Security passphrase", new { @class = "col-sm-4 control-label" })
            <div class="col-xs-4">
                @Html.PasswordFor(p => p.ClearTextPassPhrase, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(p => p.ClearTextPassPhrase)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4">
            <input type="submit" id="Create" value="Create" class="btn btn-default" />
        </div>
    </div>
}
@section scripts {}